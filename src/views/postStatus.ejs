<%- include("partials/_header") -%>

<div class="signup-1 flex items-center relative h-screen">
    <div class="overlay absolute inset-0 z-0 bg-[radial-gradient(ellipse_at_right,_var(--tw-gradient-stops))] from-sky-400 to-indigo-900 opacity-60"></div>
    <div class="flex flex-col gap-3 fixed top-10 left-5 z-50">        
        <a href="/sharepage" class="mr-2">
            <button class="rounded-lg w-24 py-2 bg-white font-bold text-gray-800 text-sm hover:bg-blue-600 hover:text-white duration-300 opacity-60 transition transform hover:-translate-y-0.5">Share Page</button>
        </a>
    </div>
    <div class="container px-4 mx-auto relative z-10">
      <div class="mx-10 flex flex-col items-center justify-center">
        <div class="relative box bg-white p-3 w-3/4 md:px-8 md:pt-8 border-t-10 border-solid border-indigo-600 rounded-lg opacity-80">
            <form action="/sharepage/post" method="POST">
                <div class="flex flex-col mx-16">
                    <div class="flex items-end">
                        <h1 class="font-bold text-xl"><%= username %></h1>
                        <input type="text" name="postMessage" placeholder="Write your thoughts..." class="messageInput w-full ml-2 py-3 px-4 bg-white rounded-br-3xl rounded-tr-3xl rounded-tl-xl text-gray-800 border border-gray-800">
                    </div>
                    <table class="my-6 px-5 border border-gray-900 rounded-lg border-separate">
                        <thead>
                            <tr>
                                <th class="py-3"></th>
                                <th class="py-3"><p class="text-gray-500">Applied</p></th>
                                <th class="py-3"><p class="text-gray-500">On process</p></th>
                                <th class="py-3"><p class="text-gray-500">No respomse</p></th>
                                <th class="py-3"><p class="text-gray-500">Offered</p></th>
                                <th class="py-3"><p class="text-gray-500">Declined</p></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td class="pl-5 py-3"><p class="text-lg w-20 font-bold">Total: </p></td>
                                <td class="py-3">
                                    <p class="font-bold text-gray-700 text-xl text-center"><%= totalData.apply.length %></p>
                                    <input type="hidden" name="totalApplied" value="<%= totalData.apply.length %>">
                                </td>
                                <td class="py-3">
                                    <p class="font-bold text-gray-700 text-xl text-center"><%= totalData.onProcess.length %></p>
                                    <input type="hidden" name="totalOnProcess" value="<%= totalData.onProcess.length %>">
                                </td>
                                <td class="py-3">
                                    <p class="font-bold text-gray-700 text-xl text-center"><%= totalData.noResponse.length %></p>
                                    <input type="hidden" name="totalNoResponse" value="<%= totalData.noResponse.length %>">
                                </td>
                                <td class="py-3">
                                    <p class="font-bold text-gray-700 text-xl text-center"><%= totalData.offered.length %></p>
                                    <input type="hidden" name="totalOffered" value="<%= totalData.offered.length %>">
                                </td>
                                <td class="py-3">
                                    <p class="font-bold text-gray-700 text-xl text-center"><%= totalData.declined.length %></p>
                                    <input type="hidden" name="totalDeclined" value="<%= totalData.declined.length %>">
                                </td>
                            </tr>
                            <tr>
                                <td class="pl-5 py-3"><p class="text-lg w-20 font-bold">Today: </p></td>
                                <td class="py-3">
                                    <p class="font-bold text-gray-700 text-xl text-center"><%= todayData.apply.length %></p>
                                    <input type="hidden" name="todayApplied" value="<%= todayData.apply.length %>">
                                </td>
                                <td class="py-3">
                                    <p class="font-bold text-gray-700 text-xl text-center"><%= todayData.onProcess.length %></p>
                                    <input type="hidden" name="todayOnProcess" value="<%= todayData.onProcess.length %>">
                                </td>
                                <td class="py-3">
                                    <p class="font-bold text-gray-700 text-xl text-center"><%= todayData.noResponse.length %></p>
                                    <input type="hidden" name="todayNoResponse" value="<%= todayData.noResponse.length %>">
                                </td>
                                <td class="py-3">
                                    <p class="font-bold text-gray-700 text-xl text-center"><%= todayData.offered.length %></p>
                                    <input type="hidden" name="todayOffered" value="<%= todayData.offered.length %>">
                                </td>
                                <td class="py-3">
                                    <p class="font-bold text-gray-700 text-xl text-center"><%= todayData.declined.length %></p>
                                    <input type="hidden" name="todayDeclined" value="<%= todayData.declined.length %>">
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <div class="text-center">
                    <button type="submit" class="rounded-lg px-8 py-2 mt-6 bg-blue-500 text-white hover:bg-blue-600 duration-300 transition transform hover:-translate-y-0.5">Share</button>
                </div>
            </form>
        </div>

      </div>
    </div>
</div>

<script>
    document.querySelector('.messageInput').focus()
</script>

<%- include("partials/_footer") -%>
